# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Go files
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4

# Makefiles
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_style = space
indent_size = 4

# Ruby files
[*.rb]
indent_style = space
indent_size = 2

# Swift files
[*.swift]
indent_style = space
indent_size = 4

# Dart files
[*.dart]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*,*.dockerfile}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock}]
indent_style = space
indent_size = 2

# Go module files
[{go.mod,go.sum}]
indent_style = tab
indent_size = 4

# GitHub workflows
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size: 2

# License and documentation files
[{LICENSE,README,CHANGELOG,CONTRIBUTING,*.txt}]
indent_style = space
indent_size = 2
